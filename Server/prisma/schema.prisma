// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider     = "postgresql"
  url          = env("DATABASE_URL")
  relationMode = "foreignKeys"
}

// User model
model user {
  id                String   @id @default(uuid())
  name              String
  email             String   @unique
  password          String
  role              Role     @default(EMPLOYEE)
  hashRt            String?
  addedBy           String?
  updatedBy         String?
  password_reset    Boolean  @default(false)
  disabled_by_admin Boolean  @default(false)
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt
  shift             shift[]

  @@map("user")
}

// Player model
model Player {
  id          String        @id @default(uuid())
  name        String
  facebookURL String        @unique
  image       String?
  note        String?
  Game        Game[]
  Transaction Transaction[]
  addedBy     String?
  updatedBy   String?
}

model Game {
  id       String   @id @default(uuid())
  iGN      String
  type     GameType
  Player   Player?  @relation(fields: [playerId], references: [id])
  playerId String?
}

// Shift model
model shift {
  id          String        @id @default(uuid())
  startTime   String?
  endTime     String?
  employee    user          @relation(fields: [employeeId], references: [id])
  employeeId  String
  Transaction Transaction[]

  @@index([employeeId])
}

model Transaction {
  id        String          @id @default(uuid())
  amount    Int
  bonus     Int @default(0)
  tip       Int @default(0)
  total     Int
  timeStamp String
  type      TransactionType
  Player    Player?         @relation(fields: [playerId], references: [id])
  playerId  String?
  shift     shift?          @relation(fields: [shiftId], references: [id])
  shiftId   String?
}

enum TransactionType {
  CASHIN
  FREEPLAY
  CASHOUT
}

enum Role {
  ADMIN
  EMPLOYEE
}

enum GameType {
  FIREKIRIN
  ORIONSTARS
  GAMEVAULT
  PANDAMASTER
  ULTRAPANDA
  VBLINK
  MILKYWAY
  JUWA
}
