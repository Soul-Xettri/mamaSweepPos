// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider     = "mysql"
  url          = env("DATABASE_URL")
  relationMode = "foreignKeys"
}

// User model
model user {
  id                String   @id @default(uuid())
  name              String
  email             String   @unique
  password          String
  role              Role     @default(EMPLOYEE)
  hashRt            String?
  addedBy           String?
  updatedBy         String?
  password_reset    Boolean  @default(false)
  disabled_by_admin Boolean  @default(false)
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt
  shift             shift[]

  @@map("user")
}

// Player model
model Player {
  id          String  @id @default(uuid())
  name        String
  facebookURL String  @unique
  image       String?
  note        String?
  addedBy     String?
  updatedBy   String?
  Game        Game[]
}

// Shift model
model shift {
  id         String  @id @default(uuid())
  startTime  String?
  endTime    String?
  employee   user    @relation(fields: [employeeId], references: [id])
  employeeId String

  @@index([employeeId])
}

// Game model
model Game {
  id          String        @id @default(uuid())
  iGN         String
  gameName    GameType
  Transaction Transaction[]
  Player      Player?       @relation(fields: [playerId], references: [id])
  playerId    String?

  @@index([iGN])
}

model Transaction {
  id        String          @id @default(uuid())
  createdAt DateTime        @default(now())
  updatedAt DateTime        @updatedAt
  amount    Float
  bonus     Int?
  tip       Int?
  total     Float
  timeStamp DateTime
  type      TransactionType
  game      Game            @relation(fields: [gameId], references: [id])
  gameId    String
}

enum TransactionType {
  DEPOSIT
  FREEPLAY
  CASHOUT
}

enum Role {
  ADMIN
  EMPLOYEE
}

enum GameType {
  FIREKIRIN
  ORIONSTARS
  GAMEVAULT
  PANDAMASTER
  ULTRAPANDA
  VBLINK
  MILKYWAY
  JUWA
}
